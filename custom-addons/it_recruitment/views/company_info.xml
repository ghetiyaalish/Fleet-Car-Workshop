<odoo>
    <record id="view_it_recruitment_company_form" model="ir.ui.view">
        <field name="name">it.recruitment.company.form</field>
        <field name="model">it.recruitment.company</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <field name="logo" widget="image" class="oe_avatar"/>
                    </group>
                    <notebook>
                        <page string="Mission">
                            <field name="mission" widget="html"/>
                        </page>
                        <page string="Vision">
                            <field name="vision" widget="html"/>
                        </page>
                        <page string="Team">
                            <field name="team_overview" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>